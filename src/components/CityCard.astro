---
type Props = {
	cityName: string;
	citySlug: string;
	count: number;
	imageUrl?: string;
	hrefBase?: string;
};

const { cityName, citySlug, count, imageUrl, hrefBase = '/pre-owned-luxury-cars' } = Astro.props as Props;
---

<a class="group relative block overflow-hidden rounded-xl bg-white/[0.02] border border-white/5 hover:border-amber-200/30 transition-colors duration-300" href={`${hrefBase}/${citySlug}`}>
	<div class="aspect-[16/9] overflow-hidden relative">
		{imageUrl ? (
			<img src={imageUrl} alt="" loading="lazy" decoding="async" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 opacity-80 group-hover:opacity-100" />
		) : (
			<div class="w-full h-full bg-white/[0.05]"></div>
		)}
		<div class="absolute inset-0 bg-gradient-to-t from-[#05060a] via-transparent to-transparent opacity-90"></div>
	</div>
	
	<div class="absolute bottom-0 left-0 right-0 p-5">
		<h3 class="font-serif text-xl text-white mb-1 group-hover:text-amber-100 transition-colors">{cityName}</h3>
		<p class="text-sm text-white/50 font-light">{count} dealers</p>
	</div>
</a>
