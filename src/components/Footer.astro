---
import logo from '../../public/logo.jpeg';
import brands from '../data/luxury-brands.json';

const year = new Date().getFullYear();
const popularBrands = brands.slice(0, 7); // Top 7 brands
const bodyTypes = ['SUV', 'Sedan', 'Coupe', 'Convertible', 'Hatchback'];
---

<footer class="mt-20 border-t border-white/5 bg-[#05060a] relative">
	<div class="max-w-[1180px] mx-auto px-6 py-12 lg:py-16">
		<div class="flex flex-col gap-10 sm:flex-row sm:justify-between lg:gap-12">
			<!-- Brand -->
			<div class="flex flex-col gap-6 max-w-sm shrink-0">
				<div class="flex items-center gap-3">
					<img src={logo.src} alt="IndianLuxuryCars.com" class="w-10 h-10 rounded-lg object-cover opacity-90" />
					<div class="flex flex-col">
						<span class="font-serif text-lg font-bold text-white tracking-tight">IndianLuxuryCars</span>
						<span class="text-[10px] uppercase tracking-widest text-white/40">Premium Concierge</span>
					</div>
				</div>
				<p class="text-white/60 text-sm leading-relaxed font-light">
					The definitive guide to pre-owned luxury car dealers across India. 
					Connecting discerning buyers with trusted partners.
				</p>
				<div class="flex gap-3">
					<a class="px-5 py-2.5 bg-white/[0.05] border border-white/10 text-white text-xs font-bold uppercase tracking-wider rounded-full hover:bg-white/[0.1] hover:border-white/20 transition-all" href="/contact">Get Offers</a>
					<a class="px-5 py-2.5 bg-transparent border border-white/10 text-white/80 text-xs font-bold uppercase tracking-wider rounded-full hover:bg-white/[0.05] hover:text-white transition-all" href="/pre-owned-luxury-cars">Browse Cities</a>
				</div>
			</div>

			<!-- Links Grid -->
			<div class="flex-1 grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
				<div>
					<h3 class="font-serif text-white text-lg mb-4">By City</h3>
					<ul class="flex flex-col gap-3">
						<li><a href="/pre-owned-luxury-cars/delhi" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Delhi</a></li>
						<li><a href="/pre-owned-luxury-cars/mumbai" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Mumbai</a></li>
						<li><a href="/pre-owned-luxury-cars/bangalore" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Bangalore</a></li>
						<li><a href="/pre-owned-luxury-cars/hyderabad" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Hyderabad</a></li>
						<li><a href="/pre-owned-luxury-cars/chennai" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Chennai</a></li>
						<li><a href="/pre-owned-luxury-cars/pune" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Pune</a></li>
						<li><a href="/pre-owned-luxury-cars/kolkata" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Kolkata</a></li>
					</ul>
				</div>
				
				<div>
					<h3 class="font-serif text-white text-lg mb-4">By Brand</h3>
					<ul class="flex flex-col gap-3">
                        {popularBrands.map(brand => (
                            <li>
                                <a href={`/pre-owned-luxury-cars/delhi/${brand.toLowerCase().replace(/\s+/g, '-')}`} class="text-sm text-white/60 hover:text-amber-200 transition-colors">
                                    Used {brand}
                                </a>
                            </li>
                        ))}
                        <li>
                            <a href="/cars" class="text-sm text-amber-200/80 hover:text-white transition-colors mt-2 inline-block">View All Brands &rarr;</a>
                        </li>
					</ul>
				</div>

				<div>
					<h3 class="font-serif text-white text-lg mb-4">By Body Type</h3>
					<ul class="flex flex-col gap-3">
                        {bodyTypes.map(type => (
                            <li>
                                <a href={`/pre-owned-luxury-cars/delhi/${type.toLowerCase()}`} class="text-sm text-white/60 hover:text-amber-200 transition-colors">
                                    Used {type}
                                </a>
                            </li>
                        ))}
					</ul>

                    <h3 class="font-serif text-white text-lg mt-8 mb-4">Sell</h3>
                    <ul class="flex flex-col gap-3">
						<li><a href="/sell" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Sell Your Car</a></li>
                    </ul>
				</div>
				
				<div>
					<h3 class="font-serif text-white text-lg mb-4">Contact</h3>
					<ul class="flex flex-col gap-3">
						<li>
							<a href="https://wa.me/919239044208" class="text-sm text-white/60 hover:text-white transition-colors flex items-center gap-2">
								<svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" class="opacity-70">
									<path d="M13.601 2.326A7.95 7.95 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.228.149-.43.049-.202-.1-.853-.314-1.624-1.002-.602-.536-1.01-1.2-1.129-1.402-.119-.202-.013-.312.087-.411.09-.089.197-.232.296-.349.099-.117.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
								</svg>
								<span>WhatsApp Us</span>
							</a>
						</li>
						<li>
							<a href="mailto:hi@indianluxurycars.com" class="text-sm text-white/60 hover:text-white transition-colors flex items-center gap-2">
								<span>hi@indianluxurycars.com</span>
							</a>
						</li>
						<li class="text-sm text-white/40 pt-2">
							Newtown, Kolkata, India
						</li>
					</ul>
                    
                    <h3 class="font-serif text-white text-lg mt-8 mb-4">Explore</h3>
					<ul class="flex flex-col gap-3">
						<li><a href="/" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Home</a></li>
						<li><a href="/pre-owned-luxury-cars" class="text-sm text-white/60 hover:text-amber-200 transition-colors">All Cities</a></li>
                        <li><a href="/contact" class="text-sm text-white/60 hover:text-amber-200 transition-colors">Concierge</a></li>
					</ul>
				</div>
			</div>
		</div>

		<div class="flex flex-col sm:flex-row justify-between items-center mt-16 pt-8 border-t border-white/5 gap-4">
			<div class="text-white/40 text-xs">Â© {year} IndianLuxuryCars.com</div>
			<div class="flex gap-6">
				<a href="#" class="text-white/40 text-xs hover:text-white transition-colors">Privacy</a>
				<a href="#" class="text-white/40 text-xs hover:text-white transition-colors">Terms</a>
			</div>
		</div>
	</div>
</footer>
