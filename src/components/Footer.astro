---
const year = new Date().getFullYear();
---

<footer class="site-footer">
	<div class="container">
		<div class="top">
			<div class="brand">
				<div class="mark" aria-hidden="true">ILC</div>
				<div class="brandContent">
					<div class="title">Indian Luxury Cars</div>
					<div class="muted small tagline">Pre-owned luxury cars — dealers by city across India.</div>
					<div class="ctaRow">
						<a class="btn primary" href="/contact">Get offers</a>
						<a class="btn ghost" href="/pre-owned-luxury-cars">Browse dealers</a>
					</div>
				</div>
			</div>

			<div class="links">
				<div class="col">
					<div class="colTitle">Marketplace</div>
					<a href="/pre-owned-luxury-cars">Browse cities</a>
					<a href="/contact">Request offers</a>
				</div>
				<div class="col">
					<div class="colTitle">Contact</div>
					<a href="tel:+919239044208" class="contactLink">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122L9.65 10.5a.678.678 0 0 1-.58-.39L7.5 6.5a.678.678 0 0 1 .122-.58l1.257-1.257a.678.678 0 0 0 .122-.58L8.5 2.5a.678.678 0 0 0-.39-.58L6.328.654a.678.678 0 0 0-.674 0z" fill="currentColor" opacity="0.7"/>
						</svg>
						+91 9239044208
					</a>
					<a href="mailto:hi@indianluxurycars.com" class="contactLink">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825a.5.5 0 0 1-.584 0L1 5.383V8a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V5.383Z" fill="currentColor" opacity="0.7"/>
						</svg>
						hi@indianluxurycars.com
					</a>
					<div class="muted small addr">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" fill="currentColor" opacity="0.7"/>
						</svg>
						Newtown, Kolkata, India
					</div>
				</div>
				<div class="col">
					<div class="colTitle">Company</div>
					<a href="/">Home</a>
					<a href="/contact">Contact</a>
				</div>
			</div>
		</div>

		<div class="bottom">
			<div class="muted small">© {year} IndianLuxuryCars.com. All rights reserved.</div>
		</div>
	</div>
</footer>

<style>
	.site-footer {
		margin-top: 60px;
		border-top: 1px solid rgba(255, 255, 255, 0.08);
		background: linear-gradient(180deg, rgba(0, 0, 0, 0.3), rgba(5, 6, 10, 0.4));
		position: relative;
	}
	.site-footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, rgba(214, 178, 94, 0.3), transparent);
	}
	.top {
		display: flex;
		flex-direction: column;
		gap: 40px;
		padding: 40px 20px;
	}
	.brand {
		display: flex;
		gap: 16px;
		align-items: flex-start;
		width: 100%;
	}
	.mark {
		width: 48px;
		height: 48px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border-radius: 14px;
		background: linear-gradient(135deg, rgba(214, 178, 94, 1), rgba(241, 212, 138, 0.95), rgba(169, 124, 43, 0.9));
		border: 1px solid rgba(255, 255, 255, 0.2);
		box-shadow: 0 4px 16px rgba(214, 178, 94, 0.25);
		font-weight: 900;
		font-size: 16px;
		letter-spacing: -0.02em;
		color: rgba(18, 12, 2, 0.95);
		flex-shrink: 0;
	}
	.brandContent {
		flex: 1;
		min-width: 0;
	}
	.title {
		font-weight: 800;
		font-size: 20px;
		letter-spacing: -0.03em;
		margin-bottom: 6px;
		color: rgba(250, 251, 255, 0.98);
	}
	.tagline {
		line-height: 1.5;
		margin-bottom: 18px;
	}
	.ctaRow {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}
	.links {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 24px;
		width: 100%;
	}
	.colTitle {
		font-weight: 700;
		font-size: 13px;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		color: rgba(250, 251, 255, 0.95);
		margin-bottom: 14px;
		position: relative;
		padding-bottom: 8px;
	}
	.colTitle::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 24px;
		height: 2px;
		background: linear-gradient(90deg, rgba(214, 178, 94, 0.8), transparent);
	}
	.col a {
		display: flex;
		align-items: center;
		gap: 8px;
		text-decoration: none;
		color: rgba(250, 251, 255, 0.75);
		padding: 8px 0;
		font-size: 14px;
		transition: all 0.2s ease;
	}
	.col a:hover {
		color: rgba(250, 251, 255, 0.98);
		transform: translateX(4px);
	}
	.contactLink {
		display: flex;
		align-items: center;
		gap: 10px;
	}
	.contactLink svg {
		flex-shrink: 0;
		transition: opacity 0.2s ease;
	}
	.contactLink:hover svg {
		opacity: 1;
	}
	.addr {
		display: flex;
		align-items: flex-start;
		gap: 10px;
		padding: 8px 0;
		line-height: 1.5;
	}
	.addr svg {
		flex-shrink: 0;
		margin-top: 2px;
	}
	.bottom {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 24px 20px;
		border-top: 1px solid rgba(255, 255, 255, 0.06);
		text-align: center;
	}
	@media (min-width: 640px) {
		.links {
			grid-template-columns: repeat(3, minmax(0, 1fr));
			gap: 32px;
		}
	}
	@media (min-width: 900px) {
		.top {
			flex-direction: row;
			align-items: flex-start;
			padding: 50px 28px;
			gap: 60px;
		}
		.brand {
			flex: 0 0 auto;
			max-width: 400px;
		}
		.links {
			flex: 1;
			grid-template-columns: repeat(3, minmax(0, 1fr));
			gap: 40px;
		}
		.bottom {
			padding: 28px 28px;
		}
	}
	@media (min-width: 1200px) {
		.top {
			gap: 80px;
		}
	}
</style>


