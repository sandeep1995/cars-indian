---
const year = new Date().getFullYear();
---

<footer class="site-footer">
	<div class="container">
		<div class="top">
			<div class="brand">
				<div class="mark" aria-hidden="true">ILC</div>
				<div>
					<div class="title">Indian Luxury Cars</div>
					<div class="muted small">Pre-owned luxury cars — dealers by city across India.</div>
					<div class="ctaRow">
						<a class="btn primary" href="/contact">Get offers</a>
						<a class="btn ghost" href="/pre-owned-luxury-cars">Browse dealers</a>
					</div>
				</div>
			</div>

			<div class="links">
				<div class="col">
					<div class="colTitle">Marketplace</div>
					<a href="/pre-owned-luxury-cars">Browse cities</a>
					<a href="/contact">Request offers</a>
				</div>
				<div class="col">
					<div class="colTitle">Company</div>
					<a href="/">Home</a>
					<a href="/contact">Contact</a>
				</div>
			</div>
		</div>

		<div class="bottom">
			<div class="muted small">© {year} IndianLuxuryCars.com</div>
			<div class="muted small">India</div>
		</div>
	</div>
</footer>

<style>
	.site-footer {
		margin-top: 34px;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		background: rgba(0, 0, 0, 0.22);
	}
	.top {
		display: grid;
		gap: 18px;
		padding: 22px 16px;
	}
	.brand {
		display: flex;
		gap: 12px;
		align-items: flex-start;
	}
	.mark {
		width: 38px;
		height: 38px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border-radius: 12px;
		background: linear-gradient(135deg, rgba(214, 178, 94, 0.98), rgba(241, 212, 138, 0.92), rgba(169, 124, 43, 0.9));
		border: 1px solid rgba(255, 255, 255, 0.18);
		font-weight: 800;
		letter-spacing: -0.04em;
		color: rgba(18, 12, 2, 0.9);
	}
	.title {
		font-weight: 750;
		letter-spacing: -0.02em;
	}
	.small {
		font-size: 13px;
	}
	.ctaRow {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
		margin-top: 12px;
	}
	.links {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 16px;
	}
	.colTitle {
		font-weight: 700;
		font-size: 13px;
		color: rgba(238, 242, 255, 0.9);
		margin-bottom: 8px;
	}
	.col a {
		display: block;
		text-decoration: none;
		color: rgba(250, 251, 255, 0.78);
		padding: 6px 0;
		font-size: 14px;
	}
	.col a:hover {
		color: rgba(238, 242, 255, 0.98);
	}
	.bottom {
		display: flex;
		justify-content: space-between;
		gap: 12px;
		padding: 14px 16px 22px;
		border-top: 1px solid rgba(255, 255, 255, 0.08);
	}
	@media (min-width: 900px) {
		.top {
			grid-template-columns: 1.2fr 1fr;
			align-items: start;
		}
	}
</style>


