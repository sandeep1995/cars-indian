---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = {
	title?: string;
	description?: string;
	robots?: string;
	ogImage?: string;
	jsonLd?: unknown;
};

const {
	title = 'IndianLuxuryCars.com | Pre-owned Luxury Cars (India)',
	description = 'IndianLuxuryCars.com â€” find pre-owned luxury cars from dealers across Indian cities. Compare dealers, reviews, locations, and contact details.',
	robots = 'index,follow',
	ogImage,
	jsonLd,
} = Astro.props;

const site = Astro.site;
const canonical = site ? new URL(Astro.url.pathname, site).href : undefined;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="robots" content={robots} />
		{canonical ? <link rel="canonical" href={canonical} /> : null}

		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		{canonical ? <meta property="og:url" content={canonical} /> : null}
		{ogImage ? <meta property="og:image" content={ogImage} /> : null}

		<meta name="twitter:card" content={ogImage ? 'summary_large_image' : 'summary'} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		{ogImage ? <meta name="twitter:image" content={ogImage} /> : null}

		{jsonLd ? (
			<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
		) : null}
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	:global(:root) {
		--bg0: #05060a;
		--bg1: #070a12;
		--text: rgba(250, 251, 255, 0.96);
		--muted: rgba(250, 251, 255, 0.72);
		--muted2: rgba(250, 251, 255, 0.58);
		--surface: rgba(255, 255, 255, 0.05);
		--surface2: rgba(255, 255, 255, 0.07);
		--border: rgba(255, 255, 255, 0.12);
		--border2: rgba(255, 255, 255, 0.18);
		--shadow: 0 26px 70px rgba(0, 0, 0, 0.55);
		--shadow-sm: 0 14px 34px rgba(0, 0, 0, 0.35);
		--radius: 18px;
		--radius-sm: 14px;
		--gold: #d6b25e;
		--gold2: #f1d48a;
		--gold3: #a97c2b;
		--accent: linear-gradient(135deg, rgba(214, 178, 94, 0.98), rgba(241, 212, 138, 0.96), rgba(169, 124, 43, 0.9));
	}

	:global(html) {
		color-scheme: dark;
		scroll-behavior: smooth;
	}

	:global(*),
	:global(*::before),
	:global(*::after) {
		box-sizing: border-box;
	}

	:global(html),
	:global(body) {
		margin: 0;
		width: 100%;
		min-height: 100%;
		background-color: var(--bg0);
		color: var(--text);
		font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, 'Apple Color Emoji',
			'Segoe UI Emoji';
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	:global(body) {
		background-image: radial-gradient(1200px 620px at 12% -10%, rgba(214, 178, 94, 0.18), rgba(0, 0, 0, 0)),
			radial-gradient(900px 520px at 88% 10%, rgba(99, 102, 241, 0.14), rgba(0, 0, 0, 0)),
			radial-gradient(900px 520px at 10% 90%, rgba(168, 85, 247, 0.12), rgba(0, 0, 0, 0)),
			linear-gradient(180deg, var(--bg1), var(--bg0));
		background-attachment: fixed;
	}

	:global(a) {
		color: inherit;
		text-decoration-color: rgba(214, 178, 94, 0.55);
		text-underline-offset: 3px;
	}
	:global(a:hover) {
		text-decoration-color: rgba(214, 178, 94, 0.9);
	}

	:global(:focus-visible) {
		outline: 2px solid rgba(214, 178, 94, 0.7);
		outline-offset: 2px;
	}

	:global(h1, h2, h3) {
		font-family: ui-serif, Iowan Old Style, Palatino, 'Palatino Linotype', 'Book Antiqua', Georgia, serif;
		letter-spacing: -0.02em;
	}

	:global(p) {
		color: var(--muted);
	}

	:global(.container) {
		max-width: 1180px;
		margin: 0 auto;
		padding: 20px 16px;
	}
	@media (min-width: 640px) {
		:global(.container) {
			padding: 24px 20px;
		}
	}
	@media (min-width: 1024px) {
		:global(.container) {
			padding: 26px 24px;
		}
	}

	:global(.section) {
		margin: 18px 0;
	}

	:global(.card) {
		background: linear-gradient(180deg, rgba(255, 255, 255, 0.065), rgba(255, 255, 255, 0.04));
		border: 1px solid var(--border);
		border-radius: var(--radius);
		box-shadow: var(--shadow-sm);
		padding: 18px;
	}

	:global(.muted) {
		color: var(--muted);
	}
	:global(.muted2) {
		color: var(--muted2);
	}

	:global(.btn) {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 8px;
		padding: 10px 14px;
		border-radius: 999px;
		border: 1px solid var(--border);
		background: rgba(255, 255, 255, 0.06);
		color: var(--text);
		text-decoration: none;
		font-weight: 700;
		font-size: 14px;
		letter-spacing: -0.01em;
		box-shadow: 0 0 0 1px rgba(0, 0, 0, 0) inset;
		transition: transform 140ms ease, background 140ms ease, border-color 140ms ease, box-shadow 140ms ease,
			filter 140ms ease;
		white-space: nowrap;
	}
	@media (min-width: 640px) {
		:global(.btn) {
			padding: 11px 14px;
			gap: 10px;
		}
	}
	:global(.btn:hover) {
		background: rgba(255, 255, 255, 0.09);
		border-color: var(--border2);
		transform: translateY(-1px);
		box-shadow: 0 18px 46px rgba(0, 0, 0, 0.35);
	}

	:global(.btn.primary) {
		background: var(--accent);
		border-color: rgba(255, 255, 255, 0.22);
		color: rgba(18, 12, 2, 0.92);
	}
	:global(.btn.primary:hover) {
		filter: brightness(1.04) saturate(1.02);
	}

	:global(.btn.ghost) {
		background: transparent;
		border-color: rgba(255, 255, 255, 0.14);
	}
	:global(.btn.ghost:hover) {
		background: rgba(255, 255, 255, 0.06);
	}

	:global(.pill) {
		display: inline-flex;
		align-items: center;
		padding: 4px 10px;
		border-radius: 999px;
		border: 1px solid rgba(214, 178, 94, 0.28);
		background: rgba(214, 178, 94, 0.12);
		color: rgba(255, 243, 214, 0.92);
		font-weight: 700;
		font-size: 12px;
		white-space: nowrap;
	}
</style>
