---
import Layout from '../layouts/Layout.astro';
import { getCities, getDealersByCitySlug } from '../lib/dealers';
import CityCard from '../components/CityCard.astro';
import cityCovers from '../data/city-covers.json';

const cities = getCities().slice(0, 24);

// Get previews for the homepage cities
const previews = new Map<string, string | undefined>();
for (const c of cities) {
	const rawCover = (cityCovers as any)?.[c.citySlug] as any;
	const cover = (typeof rawCover === 'string' ? rawCover : rawCover?.url) as string | undefined;
	if (cover) {
		previews.set(c.citySlug, cover);
	} else {
		const dealers = getDealersByCitySlug(c.citySlug);
		const dealerImage = dealers.find((d) => !!d.imageUrl)?.imageUrl;
		if (dealerImage) {
			previews.set(c.citySlug, dealerImage);
		}
	}
}

// FAQs Data
const faqs = [
	{
		question: 'What is IndianLuxuryCars.com?',
		answer: 'We are a trusted premium concierge platform connecting luxury car owners, buyers, and verified dealers across India. We facilitate seamless transactions by bringing together the right parties and ensuring transparency throughout the process.'
	},
	{
		question: 'How does the platform work?',
		answer: 'If you\'re a buyer, we connect you with verified luxury car dealers in your city. If you\'re a seller, we help you find qualified buyers and dealers who offer fair market prices. We act as the bridge, ensuring all parties have access to verified information and trusted connections.'
	},
	{
		question: 'Are the dealers verified?',
		answer: 'Yes, all dealers on our platform are verified and undergo a thorough screening process. We maintain a network of 500+ verified dealers across 25+ cities in India, ensuring you connect with reputable businesses.'
	},
	{
		question: 'What services do you provide to car owners?',
		answer: 'We help luxury car owners sell their vehicles by connecting them with multiple verified dealers and buyers. This ensures competitive pricing and a hassle-free selling experience with transparent documentation and fair valuations.'
	},
	{
		question: 'Do you charge any fees?',
		answer: 'Our platform is free for buyers to browse and connect with dealers. For sellers and dealers, we offer transparent pricing models. Contact us via WhatsApp to learn more about our service fees and how we can assist you.'
	},
	{
		question: 'Which cities do you cover?',
		answer: 'We operate across major cities in India, including Mumbai, Delhi, Bangalore, Hyderabad, Chennai, Pune, and many more. Browse our locations page to see all available cities and dealers in your area.'
	},
	{
		question: 'How can I get started?',
		answer: 'Simply reach out to us via WhatsApp or visit our contact page. Whether you\'re looking to buy, sell, or are a dealer wanting to join our network, we\'ll guide you through the process and connect you with the right parties.'
	}
];

// FAQ JSON-LD Structured Data
const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((faq) => ({
		'@type': 'Question',
		name: faq.question,
		acceptedAnswer: {
			'@type': 'Answer',
			text: faq.answer
		}
	}))
};
---

<Layout
	title="IndianLuxuryCars.com | Pre-owned Luxury Cars (India)"
	description="IndianLuxuryCars.com — browse pre-owned luxury car dealers by city across India. Compare reviews, locations, and contact details."
	jsonLd={faqJsonLd}
>
	<div class="relative w-full overflow-hidden">
		<!-- Hero Section -->
		<section class="relative min-h-[85vh] flex items-center justify-center px-4 py-20 overflow-hidden">
			<!-- Background Image & Gradient -->
			<div class="absolute inset-0 z-0">
				<div class="absolute inset-0 bg-black/40 z-10"></div>
				<div class="absolute inset-0 bg-gradient-to-t from-[#05060a] via-transparent to-transparent z-10"></div>
				<div class="relative w-full h-full">
					<img 
