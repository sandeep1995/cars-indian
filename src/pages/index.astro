---
import Layout from '../layouts/Layout.astro';
import { getCities } from '../lib/dealers';

const cities = getCities().slice(0, 24);
---

<Layout
	title="IndianLuxuryCars.com | Pre-owned Luxury Cars (India)"
	description="IndianLuxuryCars.com — browse pre-owned luxury car dealers by city across India. Compare reviews, locations, and contact details."
>
	<div class="container">
		<header class="heroLux">
			<div class="heroMedia" aria-hidden="true">
				<div class="heroImages">
					<img src="/cars/luxury-showroom.jpg" alt="" loading="eager" decoding="async" class="heroImg heroImg1" />
					<img src="/cars/lamborghini-night.jpg" alt="" loading="lazy" decoding="async" class="heroImg heroImg2" />
					<img src="/cars/porsche-panamera-motion.jpg" alt="" loading="lazy" decoding="async" class="heroImg heroImg3" />
				</div>
				<div class="fade"></div>
				<div class="gradientOverlay"></div>
			</div>
			<div class="heroBody">
				<div class="kicker">
					<span class="kickerDot"></span>
					Luxury Car Concierge • India
				</div>
				<h1>
					<span class="h1Line1">Pre-owned luxury cars,</span>
					<span class="h1Line2">without the guesswork.</span>
				</h1>
				<p class="muted heroDesc">Get offers from trusted dealers, compare options, and close with confidence.</p>
				<div class="cta">
					<a class="btn primary" href="/contact">
						<span>Get offers</span>
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M8 0L6.59 1.41L12.17 7H0v2h12.17l-5.58 5.59L8 16l8-8z" fill="currentColor"/>
						</svg>
					</a>
					<a class="btn ghost" href="/pre-owned-luxury-cars">Browse dealers</a>
				</div>
				<div class="trust">
					<div class="trustItem">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M8 0L10.163 5.818L16 6.909L11.5 11.182L12.326 16L8 13.091L3.674 16L4.5 11.182L0 6.909L5.837 5.818L8 0Z" fill="currentColor"/>
						</svg>
						<span>Verified dealers</span>
					</div>
					<div class="trustItem">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M8 0L10.163 5.818L16 6.909L11.5 11.182L12.326 16L8 13.091L3.674 16L4.5 11.182L0 6.909L5.837 5.818L8 0Z" fill="currentColor"/>
						</svg>
						<span>City-wise listings</span>
					</div>
					<div class="trustItem">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M8 0L10.163 5.818L16 6.909L11.5 11.182L12.326 16L8 13.091L3.674 16L4.5 11.182L0 6.909L5.837 5.818L8 0Z" fill="currentColor"/>
						</svg>
						<span>Fast callback</span>
					</div>
				</div>
			</div>
		</header>

		<section class="how section">
			<div class="sectionHead">
				<h2>How it works</h2>
				<p class="muted">One form. Curated replies. Clear next steps.</p>
			</div>
			<div class="howGrid">
				<div class="card step">
					<div class="stepNum">01</div>
					<div class="stepTitle">Tell us what you want</div>
					<div class="muted small">Budget, brand preferences, city, and timeline.</div>
				</div>
				<div class="card step">
					<div class="stepNum">02</div>
					<div class="stepTitle">We share verified options</div>
					<div class="muted small">We connect you with dealers that match your criteria.</div>
				</div>
				<div class="card step">
					<div class="stepNum">03</div>
					<div class="stepTitle">Shortlist & visit</div>
					<div class="muted small">Compare, inspect, and finalize with confidence.</div>
				</div>
			</div>
		</section>

		<section class="section">
			<div class="sectionHead">
				<h2>Popular cities</h2>
				<p class="muted">Browse dealers and reviews by city.</p>
			</div>
			<section class="grid">
				{cities.map((c) => (
					<a class="card city" href={`/pre-owned-luxury-cars/${c.citySlug}`}>
						<div class="name">{c.cityName}</div>
						<div class="muted">{c.count} dealers</div>
					</a>
				))}
			</section>
		</section>

		<section class="ctaCard card section">
			<div class="ctaText">
				<h2>Ready to get offers?</h2>
				<p class="muted">Tell us what you’re looking for. We’ll connect you with matching dealers.</p>
			</div>
			<div class="ctaActions">
				<a class="btn primary" href="/contact">Fill the form</a>
				<a class="btn ghost" href="/pre-owned-luxury-cars">Browse dealers</a>
			</div>
		</section>
	</div>

	<style>
		.heroLux {
			position: relative;
			border-radius: 20px;
			overflow: hidden;
			border: 1px solid rgba(255, 255, 255, 0.1);
			background: rgba(255, 255, 255, 0.03);
			box-shadow: 0 20px 60px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.05) inset;
			margin-bottom: 24px;
			min-height: 400px;
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}
		.heroLux:hover {
			transform: translateY(-2px);
			box-shadow: 0 48px 140px rgba(0, 0, 0, 0.75), 0 0 0 1px rgba(255, 255, 255, 0.08) inset;
		}
		.heroMedia {
			position: absolute;
			inset: 0;
			overflow: hidden;
		}
		.heroImages {
			position: absolute;
			inset: 0;
			width: 100%;
			height: 100%;
		}
		.heroImg {
			position: absolute;
			inset: 0;
			width: 100%;
			height: 100%;
			object-fit: cover;
			filter: saturate(1.1) contrast(1.12) brightness(0.95);
			transition: opacity 8s ease-in-out, transform 8s ease-in-out;
		}
		.heroImg1 {
			opacity: 1;
			transform: scale(1.05);
			z-index: 1;
		}
		.heroImg2 {
			opacity: 0;
			transform: scale(1.08);
			z-index: 2;
		}
		.heroImg3 {
			opacity: 0;
			transform: scale(1.06);
			z-index: 3;
		}
		@keyframes heroFade {
			0%, 33% { opacity: 1; }
			34%, 66% { opacity: 0; }
			67%, 100% { opacity: 0; }
		}
		.heroImg1 {
			animation: heroFade 18s infinite;
		}
		.heroImg2 {
			animation: heroFade 18s infinite 6s;
		}
		.heroImg3 {
			animation: heroFade 18s infinite 12s;
		}
		.fade {
			position: absolute;
			inset: 0;
			background: linear-gradient(180deg, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.65) 50%, rgba(0, 0, 0, 0.92) 100%);
			z-index: 4;
		}
		.gradientOverlay {
			position: absolute;
			inset: 0;
			background: radial-gradient(1400px 700px at 25% 15%, rgba(214, 178, 94, 0.25), rgba(0, 0, 0, 0)),
				radial-gradient(1200px 600px at 75% 20%, rgba(99, 102, 241, 0.15), rgba(0, 0, 0, 0));
			z-index: 5;
			pointer-events: none;
		}
		.heroBody {
			position: relative;
			z-index: 6;
			padding: 24px;
			display: flex;
			flex-direction: column;
			gap: 12px;
			justify-content: flex-end;
			min-height: 400px;
		}
		.kicker {
			display: inline-flex;
			align-items: center;
			gap: 6px;
			font-size: 11px;
			letter-spacing: 0.12em;
			text-transform: uppercase;
			color: rgba(250, 251, 255, 0.85);
			margin-bottom: 4px;
			font-weight: 600;
		}
		.kickerDot {
			width: 5px;
			height: 5px;
			border-radius: 50%;
			background: linear-gradient(135deg, rgba(214, 178, 94, 1), rgba(241, 212, 138, 0.9));
			box-shadow: 0 0 6px rgba(214, 178, 94, 0.6);
			animation: pulse 2s ease-in-out infinite;
		}
		@keyframes pulse {
			0%, 100% { opacity: 1; transform: scale(1); }
			50% { opacity: 0.7; transform: scale(1.2); }
		}
		h1 {
			margin: 0;
			display: flex;
			flex-direction: column;
			gap: 2px;
			line-height: 1.05;
		}
		.h1Line1 {
			font-size: 32px;
			letter-spacing: -0.04em;
			font-weight: 900;
		}
		.h1Line2 {
			font-size: 32px;
			letter-spacing: -0.04em;
			font-weight: 900;
			background: linear-gradient(135deg, rgba(250, 251, 255, 1), rgba(214, 178, 94, 0.95));
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
		}
		.heroDesc {
			font-size: 15px;
			line-height: 1.5;
			max-width: 100%;
			margin-top: 4px;
		}
		.cta {
			display: flex;
			gap: 10px;
			align-items: center;
			flex-wrap: wrap;
			margin-top: 4px;
		}
		.btn.primary {
			display: inline-flex;
			align-items: center;
			gap: 6px;
		}
		.btn.primary svg {
			width: 14px;
			height: 14px;
			transition: transform 0.2s ease;
		}
		.btn.primary:hover svg {
			transform: translateX(4px);
		}
		.trust {
			display: flex;
			flex-wrap: wrap;
			gap: 10px;
			margin-top: 8px;
		}
		.trustItem {
			display: inline-flex;
			align-items: center;
			gap: 5px;
			padding: 5px 10px;
			border-radius: 999px;
			border: 1px solid rgba(214, 178, 94, 0.3);
			background: rgba(214, 178, 94, 0.1);
			backdrop-filter: blur(10px);
			color: rgba(255, 243, 214, 0.95);
			font-size: 12px;
			font-weight: 600;
			transition: all 0.2s ease;
		}
		.trustItem svg {
			width: 12px;
			height: 12px;
			fill: rgba(255, 243, 214, 0.95);
		}
		.trustItem:hover {
			background: rgba(214, 178, 94, 0.15);
			border-color: rgba(214, 178, 94, 0.4);
			transform: translateY(-1px);
		}

		.sectionHead {
			display: flex;
			flex-direction: column;
			gap: 6px;
			margin: 0 0 12px;
		}
		.sectionHead h2 {
			margin: 0;
			font-size: 22px;
		}

		.grid {
			display: grid;
			grid-template-columns: repeat(1, minmax(0, 1fr));
			gap: 12px;
		}
		.city {
			text-decoration: none;
			position: relative;
			overflow: hidden;
		}
		.city::before {
			content: '';
			position: absolute;
			inset: 0;
			background: radial-gradient(800px 320px at 20% 10%, rgba(214, 178, 94, 0.12), rgba(0, 0, 0, 0)),
				radial-gradient(800px 320px at 90% 30%, rgba(99, 102, 241, 0.1), rgba(0, 0, 0, 0));
			opacity: 0;
			transition: opacity 160ms ease;
			pointer-events: none;
		}
		.city:hover::before {
			opacity: 1;
		}
		.name {
			font-weight: 650;
			font-size: 18px;
			position: relative;
		}
		.city .muted {
			position: relative;
		}

		.howGrid {
			display: grid;
			grid-template-columns: repeat(1, minmax(0, 1fr));
			gap: 12px;
		}
		.step {
			padding: 16px;
		}
		.stepNum {
			font-weight: 850;
			letter-spacing: -0.03em;
			font-size: 20px;
			color: rgba(255, 243, 214, 0.95);
			margin-bottom: 8px;
		}
		.stepTitle {
			font-weight: 800;
			letter-spacing: -0.02em;
			margin-bottom: 6px;
		}
		.small {
			font-size: 13px;
		}

		.ctaCard {
			display: flex;
			flex-direction: column;
			gap: 14px;
			align-items: flex-start;
			justify-content: space-between;
			background: radial-gradient(900px 420px at 15% 20%, rgba(214, 178, 94, 0.18), rgba(0, 0, 0, 0)),
				rgba(255, 255, 255, 0.05);
		}
		.ctaCard h2 {
			margin: 0;
			font-size: 24px;
		}
		.ctaText p {
			margin: 6px 0 0;
		}
		.ctaActions {
			display: flex;
			flex-wrap: wrap;
			gap: 10px;
		}

		@media (min-width: 640px) {
			.heroLux {
				border-radius: 24px;
				margin-bottom: 28px;
				min-height: 450px;
			}
			.heroBody {
				padding: 32px;
				min-height: 450px;
			}
			.h1Line1,
			.h1Line2 {
				font-size: 42px;
			}
			.heroDesc {
				font-size: 17px;
			}
			.kicker {
				font-size: 12px;
				gap: 8px;
			}
			.kickerDot {
				width: 6px;
				height: 6px;
			}
			.trust {
				gap: 12px;
			}
			.trustItem {
				font-size: 13px;
				padding: 6px 12px;
			}
			.trustItem svg {
				width: 14px;
				height: 14px;
			}
		}
		@media (min-width: 720px) {
			.grid {
				grid-template-columns: repeat(3, minmax(0, 1fr));
			}
			.heroBody {
				padding: 48px;
				min-height: 560px;
			}
			.heroLux {
				border-radius: 28px;
				min-height: 560px;
			}
			.h1Line1,
			.h1Line2 {
				font-size: 64px;
			}
			.heroDesc {
				font-size: 20px;
			}
			.howGrid {
				grid-template-columns: repeat(3, minmax(0, 1fr));
			}
			.ctaCard {
				flex-direction: row;
				align-items: center;
			}
		}
		@media (min-width: 1024px) {
			.heroBody {
				padding: 60px;
				min-height: 640px;
			}
			.heroLux {
				min-height: 640px;
			}
			.h1Line1,
			.h1Line2 {
				font-size: 72px;
			}
			.grid {
				grid-template-columns: repeat(4, minmax(0, 1fr));
			}
		}
	</style>
</Layout>
