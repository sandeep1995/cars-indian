---
import Layout from '../layouts/Layout.astro';
import { getCities } from '../lib/dealers';
import CityCard from '../components/CityCard.astro';

const cities = getCities().slice(0, 24);
---

<Layout
	title="IndianLuxuryCars.com | Pre-owned Luxury Cars (India)"
	description="IndianLuxuryCars.com — browse pre-owned luxury car dealers by city across India. Compare reviews, locations, and contact details."
>
	<div class="max-w-[1180px] mx-auto px-4 py-5 sm:px-5 sm:py-6 lg:px-6 lg:py-[26px]">
		<header class="relative rounded-[20px] overflow-hidden border border-[rgba(255,255,255,0.1)] bg-[rgba(255,255,255,0.03)] shadow-[0_20px_60px_rgba(0,0,0,0.6),0_0_0_1px_rgba(255,255,255,0.05)_inset] mb-6 min-h-[400px] transition-[transform,box-shadow] duration-300 ease-in-out hover:-translate-y-0.5 hover:shadow-[0_48px_140px_rgba(0,0,0,0.75),0_0_0_1px_rgba(255,255,255,0.08)_inset] sm:rounded-2xl sm:mb-7 sm:min-h-[450px] sm:rounded-[28px] sm:min-h-[560px] lg:min-h-[640px]">
			<div class="absolute inset-0 overflow-hidden" aria-hidden="true">
				<div class="absolute inset-0 w-full h-full">
					<img src="/cars/luxury-showroom.jpg" alt="" loading="eager" decoding="async" class="hero-img hero-img-1 absolute inset-0 w-full h-full object-cover saturate-[1.1] contrast-[1.12] brightness-95 transition-[opacity,transform] duration-[8s] ease-in-out opacity-100 scale-[1.05] z-[1]" />
					<img src="/cars/lamborghini-night.jpg" alt="" loading="lazy" decoding="async" class="hero-img hero-img-2 absolute inset-0 w-full h-full object-cover saturate-[1.1] contrast-[1.12] brightness-95 transition-[opacity,transform] duration-[8s] ease-in-out opacity-0 scale-[1.08] z-[2]" />
					<img src="/cars/porsche-panamera-motion.jpg" alt="" loading="lazy" decoding="async" class="hero-img hero-img-3 absolute inset-0 w-full h-full object-cover saturate-[1.1] contrast-[1.12] brightness-95 transition-[opacity,transform] duration-[8s] ease-in-out opacity-0 scale-[1.06] z-[3]" />
				</div>
				<div class="absolute inset-0 bg-gradient-to-b from-[rgba(0,0,0,0.15)] via-[rgba(0,0,0,0.65)] to-[rgba(0,0,0,0.92)] z-[4]"></div>
				<div class="absolute inset-0 bg-[radial-gradient(1400px_700px_at_25%_15%,rgba(214,178,94,0.25),rgba(0,0,0,0)),radial-gradient(1200px_600px_at_75%_20%,rgba(99,102,241,0.15),rgba(0,0,0,0))] z-[5] pointer-events-none"></div>
			</div>
			<div class="relative z-[6] p-6 flex flex-col gap-3 justify-end min-h-[400px] sm:p-8 sm:min-h-[450px] sm:p-12 sm:min-h-[560px] lg:p-[60px] lg:min-h-[640px]">
				<div class="inline-flex items-center gap-1.5 text-[11px] tracking-[0.12em] uppercase text-[rgba(250,251,255,0.85)] mb-1 font-semibold sm:text-xs sm:gap-2">
					<span class="w-1.5 h-1.5 rounded-full bg-[linear-gradient(135deg,rgba(214,178,94,1),rgba(241,212,138,0.9))] shadow-[0_0_6px_rgba(214,178,94,0.6)] animate-pulse-custom sm:w-1.5 sm:h-1.5"></span>
					Luxury Car Concierge • India
				</div>
				<h1 class="m-0 flex flex-col gap-0.5 leading-[1.05]">
					<span class="text-[32px] tracking-[-0.04em] font-black sm:text-[42px] sm:text-[64px] lg:text-[72px]">Pre-owned luxury cars,</span>
					<span class="text-[32px] tracking-[-0.04em] font-black bg-gradient-to-br from-[rgba(250,251,255,1)] to-[rgba(214,178,94,0.95)] bg-clip-text text-transparent sm:text-[42px] sm:text-[64px] lg:text-[72px]">without the guesswork.</span>
				</h1>
				<p class="text-[rgba(250,251,255,0.72)] text-[15px] leading-6 max-w-full mt-1 sm:text-[17px] sm:text-xl">Get offers from trusted dealers, compare options, and close with confidence.</p>
				<div class="flex gap-[10px] items-center flex-wrap mt-1">
					<a class="group inline-flex items-center justify-center gap-1.5 px-[14px] py-[10px] rounded-full border border-[rgba(255,255,255,0.22)] bg-[linear-gradient(135deg,rgba(214,178,94,0.98),rgba(241,212,138,0.96),rgba(169,124,43,0.9))] text-[rgba(18,12,2,0.92)] no-underline font-bold text-sm tracking-[-0.01em] whitespace-nowrap transition-all duration-[140ms] ease-in-out hover:brightness-[1.04] hover:saturate-[1.02] sm:py-[11px] sm:gap-[10px]" href="/contact">
						<span>Get offers</span>
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 transition-transform duration-200 ease-in-out group-hover:translate-x-1">
							<path d="M8 0L6.59 1.41L12.17 7H0v2h12.17l-5.58 5.59L8 16l8-8z" fill="currentColor"/>
						</svg>
					</a>
					<a class="inline-flex items-center justify-center gap-2 px-[14px] py-[10px] rounded-full border border-[rgba(255,255,255,0.14)] bg-transparent text-[rgba(250,251,255,0.96)] no-underline font-bold text-sm tracking-[-0.01em] whitespace-nowrap transition-all duration-[140ms] ease-in-out hover:bg-[rgba(255,255,255,0.06)] hover:border-[rgba(255,255,255,0.18)] hover:-translate-y-px hover:shadow-[0_18px_46px_rgba(0,0,0,0.35)] sm:py-[11px] sm:gap-[10px]" href="/pre-owned-luxury-cars">Browse dealers</a>
				</div>
				<div class="flex flex-wrap gap-[10px] mt-2 sm:gap-3">
					<div class="inline-flex items-center gap-1.5 py-1.5 px-2.5 rounded-full border border-[rgba(214,178,94,0.3)] bg-[rgba(214,178,94,0.1)] backdrop-blur-[10px] text-[rgba(255,243,214,0.95)] text-xs font-semibold transition-all duration-200 ease-in-out hover:bg-[rgba(214,178,94,0.15)] hover:border-[rgba(214,178,94,0.4)] hover:-translate-y-px sm:text-[13px] sm:py-1.5 sm:px-3">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 fill-[rgba(255,243,214,0.95)] sm:w-3.5 sm:h-3.5">
							<path d="M8 0L10.163 5.818L16 6.909L11.5 11.182L12.326 16L8 13.091L3.674 16L4.5 11.182L0 6.909L5.837 5.818L8 0Z" fill="currentColor"/>
						</svg>
						<span>Verified dealers</span>
					</div>
					<div class="inline-flex items-center gap-1.5 py-1.5 px-2.5 rounded-full border border-[rgba(214,178,94,0.3)] bg-[rgba(214,178,94,0.1)] backdrop-blur-[10px] text-[rgba(255,243,214,0.95)] text-xs font-semibold transition-all duration-200 ease-in-out hover:bg-[rgba(214,178,94,0.15)] hover:border-[rgba(214,178,94,0.4)] hover:-translate-y-px sm:text-[13px] sm:py-1.5 sm:px-3">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 fill-[rgba(255,243,214,0.95)] sm:w-3.5 sm:h-3.5">
							<path d="M8 0L10.163 5.818L16 6.909L11.5 11.182L12.326 16L8 13.091L3.674 16L4.5 11.182L0 6.909L5.837 5.818L8 0Z" fill="currentColor"/>
						</svg>
						<span>City-wise listings</span>
					</div>
					<div class="inline-flex items-center gap-1.5 py-1.5 px-2.5 rounded-full border border-[rgba(214,178,94,0.3)] bg-[rgba(214,178,94,0.1)] backdrop-blur-[10px] text-[rgba(255,243,214,0.95)] text-xs font-semibold transition-all duration-200 ease-in-out hover:bg-[rgba(214,178,94,0.15)] hover:border-[rgba(214,178,94,0.4)] hover:-translate-y-px sm:text-[13px] sm:py-1.5 sm:px-3">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 fill-[rgba(255,243,214,0.95)] sm:w-3.5 sm:h-3.5">
							<path d="M8 0L10.163 5.818L16 6.909L11.5 11.182L12.326 16L8 13.091L3.674 16L4.5 11.182L0 6.909L5.837 5.818L8 0Z" fill="currentColor"/>
						</svg>
						<span>Fast callback</span>
					</div>
				</div>
			</div>
		</header>

		<section class="my-[18px]">
			<div class="flex flex-col gap-1.5 mb-3">
				<h2 class="m-0 text-[22px]">How it works</h2>
				<p class="text-[rgba(250,251,255,0.72)]">One form. Curated replies. Clear next steps.</p>
			</div>
			<div class="grid grid-cols-1 gap-3 sm:grid-cols-3">
				<div class="bg-gradient-to-b from-[rgba(255,255,255,0.065)] to-[rgba(255,255,255,0.04)] border border-[rgba(255,255,255,0.12)] rounded-[18px] shadow-[0_14px_34px_rgba(0,0,0,0.35)] p-4">
					<div class="font-[850] tracking-[-0.03em] text-xl text-[rgba(255,243,214,0.95)] mb-2">01</div>
					<div class="font-extrabold tracking-[-0.02em] mb-1.5">Tell us what you want</div>
					<div class="text-[rgba(250,251,255,0.72)] text-[13px]">Budget, brand preferences, city, and timeline.</div>
				</div>
				<div class="bg-gradient-to-b from-[rgba(255,255,255,0.065)] to-[rgba(255,255,255,0.04)] border border-[rgba(255,255,255,0.12)] rounded-[18px] shadow-[0_14px_34px_rgba(0,0,0,0.35)] p-4">
					<div class="font-[850] tracking-[-0.03em] text-xl text-[rgba(255,243,214,0.95)] mb-2">02</div>
					<div class="font-extrabold tracking-[-0.02em] mb-1.5">We share verified options</div>
					<div class="text-[rgba(250,251,255,0.72)] text-[13px]">We connect you with dealers that match your criteria.</div>
				</div>
				<div class="bg-gradient-to-b from-[rgba(255,255,255,0.065)] to-[rgba(255,255,255,0.04)] border border-[rgba(255,255,255,0.12)] rounded-[18px] shadow-[0_14px_34px_rgba(0,0,0,0.35)] p-4">
					<div class="font-[850] tracking-[-0.03em] text-xl text-[rgba(255,243,214,0.95)] mb-2">03</div>
					<div class="font-extrabold tracking-[-0.02em] mb-1.5">Shortlist & visit</div>
					<div class="text-[rgba(250,251,255,0.72)] text-[13px]">Compare, inspect, and finalize with confidence.</div>
				</div>
			</div>
		</section>

		<section class="my-[18px]">
			<div class="flex flex-col gap-1.5 mb-3">
				<h2 class="m-0 text-[22px]">Popular cities</h2>
				<p class="text-[rgba(250,251,255,0.72)]">Browse dealers and reviews by city.</p>
			</div>
			<section class="grid grid-cols-1 gap-3 sm:grid-cols-3 lg:grid-cols-4">
				{cities.map((c) => (
					<CityCard cityName={c.cityName} citySlug={c.citySlug} count={c.count} imageUrl={c.imageUrl} />
				))}
			</section>
		</section>

		<section class="bg-gradient-to-b from-[rgba(255,255,255,0.065)] to-[rgba(255,255,255,0.04)] border border-[rgba(255,255,255,0.12)] rounded-[18px] shadow-[0_14px_34px_rgba(0,0,0,0.35)] my-[18px] flex flex-col gap-3.5 items-start justify-between bg-[radial-gradient(900px_420px_at_15%_20%,rgba(214,178,94,0.18),rgba(0,0,0,0)),rgba(255,255,255,0.05)] p-[18px] sm:flex-row sm:items-center">
			<div>
				<h2 class="m-0 text-2xl">Ready to get offers?</h2>
				<p class="text-[rgba(250,251,255,0.72)] mt-1.5 mb-0">Tell us what you're looking for. We'll connect you with matching dealers.</p>
			</div>
			<div class="flex flex-wrap gap-[10px]">
				<a class="inline-flex items-center justify-center gap-2 px-[14px] py-[10px] rounded-full border border-[rgba(255,255,255,0.22)] bg-[linear-gradient(135deg,rgba(214,178,94,0.98),rgba(241,212,138,0.96),rgba(169,124,43,0.9))] text-[rgba(18,12,2,0.92)] no-underline font-bold text-sm tracking-[-0.01em] whitespace-nowrap transition-all duration-[140ms] ease-in-out hover:brightness-[1.04] hover:saturate-[1.02] sm:py-[11px] sm:gap-[10px]" href="/contact">Fill the form</a>
				<a class="inline-flex items-center justify-center gap-2 px-[14px] py-[10px] rounded-full border border-[rgba(255,255,255,0.14)] bg-transparent text-[rgba(250,251,255,0.96)] no-underline font-bold text-sm tracking-[-0.01em] whitespace-nowrap transition-all duration-[140ms] ease-in-out hover:bg-[rgba(255,255,255,0.06)] hover:border-[rgba(255,255,255,0.18)] hover:-translate-y-px hover:shadow-[0_18px_46px_rgba(0,0,0,0.35)] sm:py-[11px] sm:gap-[10px]" href="/pre-owned-luxury-cars">Browse dealers</a>
			</div>
		</section>
	</div>

	<style>
		@keyframes heroFade {
			0%, 33% { opacity: 1; }
			34%, 66% { opacity: 0; }
			67%, 100% { opacity: 0; }
		}
		@keyframes pulse {
			0%, 100% { opacity: 1; transform: scale(1); }
			50% { opacity: 0.7; transform: scale(1.2); }
		}
		.hero-img-1 {
			animation: heroFade 18s infinite;
		}
		.hero-img-2 {
			animation: heroFade 18s infinite 6s;
		}
		.hero-img-3 {
			animation: heroFade 18s infinite 12s;
		}
		.animate-pulse-custom {
			animation: pulse 2s ease-in-out infinite;
		}
		.group:hover svg {
			transform: translateX(4px);
		}
	</style>
</Layout>
