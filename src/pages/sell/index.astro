---
import Layout from '../../layouts/Layout.astro';
import { getCities } from '../../lib/dealers';
import brands from '../../data/luxury-brands.json';

const city = 'India';

// SEO Logic
const pageTitle = 'Sell Your Luxury Car | Best Price for Used Luxury Cars in India';
const description = 'Looking to sell your luxury car? Get the best market price, instant payment, and hassle-free documentation across India. We buy Audi, BMW, Mercedes, Jaguar & more.';

// JSON-LD
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: pageTitle,
  description: description,
  provider: {
    '@type': 'AutoDealer',
    name: 'Indian Luxury Cars',
    image: 'https://indianluxurycars.com/assets/astro.svg', // Placeholder
    telephone: '+919239044208',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'India',
      addressCountry: 'IN'
    }
  },
  areaServed: {
    '@type': 'Country',
    name: 'India'
  },
  serviceType: 'Car Buying Service'
};

const topCities = getCities().sort((a, b) => b.count - a.count).slice(0, 60);
---

<Layout title={pageTitle} description={description} jsonLd={[jsonLd]}>
  <div class="relative min-h-[60vh] flex items-center justify-center px-6 py-20 overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-[#05060a] z-10"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-amber-900/20 via-[#05060a] to-[#05060a] z-20"></div>
      <!-- Abstract decorative elements -->
      <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-amber-500/10 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-900/10 rounded-full blur-[100px] translate-y-1/2 -translate-x-1/2"></div>
    </div>

    <div class="relative z-30 w-full max-w-4xl mx-auto text-center">
      <div class="inline-block py-1 px-3 rounded-full bg-amber-900/30 border border-amber-500/30 text-amber-200 text-xs font-bold uppercase tracking-widest mb-6">
        Sell Your Car
      </div>
      
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-serif text-white mb-6 leading-tight">
        Sell Your <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-200 to-amber-500">Luxury Car</span> in India
      </h1>
      
      <p class="text-lg md:text-xl text-white/60 font-light max-w-2xl mx-auto mb-10 leading-relaxed">
        Get the best value for your premium vehicle. Instant payment, doorstep inspection, and complete paperwork assistance across major Indian cities.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="https://wa.me/919239044208?text=Hi,%20I%20want%20to%20sell%20my%20car" class="group relative px-8 py-4 bg-[#25D366] text-white font-bold uppercase tracking-wider rounded-full overflow-hidden transition-transform hover:scale-105">
          <span class="relative z-10 flex items-center gap-2">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp Us
          </span>
          <div class="absolute inset-0 bg-green-600 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
        </a>
        
      
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-6 py-20">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      <div class="p-8 rounded-2xl bg-white/[0.02] border border-white/5 hover:border-amber-500/30 transition-colors">
        <div class="w-12 h-12 rounded-full bg-amber-500/10 flex items-center justify-center text-amber-500 mb-6">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </div>
        <h3 class="text-xl font-serif text-white mb-3">Best Market Price</h3>
        <p class="text-white/50 leading-relaxed">We use real-time market data to offer you the highest possible price for your luxury car.</p>
      </div>

      <div class="p-8 rounded-2xl bg-white/[0.02] border border-white/5 hover:border-amber-500/30 transition-colors">
        <div class="w-12 h-12 rounded-full bg-amber-500/10 flex items-center justify-center text-amber-500 mb-6">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
        </div>
        <h3 class="text-xl font-serif text-white mb-3">Instant Payment</h3>
        <p class="text-white/50 leading-relaxed">Receive payment directly to your bank account before we pick up the car. 100% transparent process.</p>
      </div>

      <div class="p-8 rounded-2xl bg-white/[0.02] border border-white/5 hover:border-amber-500/30 transition-colors">
        <div class="w-12 h-12 rounded-full bg-amber-500/10 flex items-center justify-center text-amber-500 mb-6">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 11l3 3L22 4"/><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/></svg>
        </div>
        <h3 class="text-xl font-serif text-white mb-3">Hassle-free Transfer</h3>
        <p class="text-white/50 leading-relaxed">We handle all the paperwork, including RC transfer, so you don't have to worry about a thing.</p>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="mb-20">
      <h2 class="text-2xl font-serif text-white mb-8 text-center">Sell Your Car in Your City</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
        {topCities.map(c => (
          <a href={`/sell/luxury-cars-in-${c.citySlug}`} class="block p-3 rounded-lg border border-white/5 bg-white/[0.02] hover:bg-white/[0.05] hover:border-amber-500/30 transition-colors text-center">
            <span class="text-sm text-white/70">{c.cityName}</span>
          </a>
        ))}
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center" id="estimate">
      <div>
        <h2 class="text-3xl md:text-5xl font-serif text-white mb-6">Ready to sell your car?</h2>
        <p class="text-lg text-white/60 mb-8 leading-relaxed">
          Fill out the form to get an instant valuation. Our experts will visit you for a free inspection at your convenience.
        </p>
        
        <div class="space-y-4">
          <div class="flex items-center gap-4 text-white/70">
            <div class="w-6 h-6 rounded-full bg-green-500/20 flex items-center justify-center text-green-500">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            </div>
            <span>Free Doorstep Evaluation</span>
          </div>
          <div class="flex items-center gap-4 text-white/70">
            <div class="w-6 h-6 rounded-full bg-green-500/20 flex items-center justify-center text-green-500">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            </div>
            <span>Highest Price Guarantee</span>
          </div>
          <div class="flex items-center gap-4 text-white/70">
            <div class="w-6 h-6 rounded-full bg-green-500/20 flex items-center justify-center text-green-500">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            </div>
            <span>Instant Money Transfer</span>
          </div>
        </div>
      </div>

      <div class="bg-[#0a0c14] border border-white/10 rounded-2xl shadow-2xl p-1 overflow-hidden backdrop-blur-xl">
        <div class="bg-white rounded-xl overflow-hidden">
          <iframe 
            data-tally-src="https://tally.so/embed/Gx6kWe?hideTitle=1&transparentBackground=1&formEventsForwarding=1" 
            loading="lazy" 
            width="100%" 
            height="500" 
            frameborder="0" 
            marginheight="0" 
            marginwidth="0" 
            title="Contact"
            class="w-full"
          ></iframe>
        </div>
      </div>
    </div>
  </div>
  
  <script is:inline>
    var d=document,w="https://tally.so/widgets/embed.js",v=function(){"undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))};if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){var s=d.createElement("script");s.src=w,s.onload=v,s.onerror=v,d.body.appendChild(s);}
  </script>
</Layout>
