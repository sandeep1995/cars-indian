---
import Layout from '../layouts/Layout.astro';

const title = 'Concierge Service | IndianLuxuryCars.com';
const description = 'Tell us your requirements. We will personally connect you with verified pre-owned luxury car dealers.';
---

<Layout title={title} description={description}>
	<div class="min-h-[80vh] flex flex-col items-center justify-center px-4 py-20 relative overflow-hidden">
		<!-- Background Elements -->
		<div class="absolute inset-0 z-0">
			<div class="absolute inset-0 bg-gradient-to-b from-[#05060a] via-[#05060a]/95 to-[#05060a]"></div>
			<img src="/cars/porsche-panamera-motion.jpg" alt="" class="absolute inset-0 w-full h-full object-cover opacity-20 blur-sm" />
		</div>

		<div class="relative z-10 w-full max-w-2xl mx-auto">
			<div class="text-center mb-12">
				<span class="inline-block py-1 px-3 rounded-full bg-amber-900/20 border border-amber-500/20 text-amber-200 text-xs font-bold uppercase tracking-widest mb-6">
					Concierge Service
				</span>
				<h1 class="text-4xl md:text-5xl font-serif text-white mb-6">Your Personal Car Scout</h1>
				<p class="text-lg text-white/60 font-light leading-relaxed">
					Don't waste time searching. Tell us what you're looking for, and we'll curate the best options from our network of 500+ verified dealers.
				</p>
			</div>

			<div class="bg-[#0a0c14] border border-white/10 rounded-2xl shadow-2xl p-1 overflow-hidden backdrop-blur-xl">
				<div class="bg-white rounded-xl overflow-hidden">
					<iframe 
						data-tally-src="https://tally.so/embed/Gx6kWe?hideTitle=1&transparentBackground=1&formEventsForwarding=1" 
						loading="lazy" 
						width="100%" 
						height="500" 
						frameborder="0" 
						marginheight="0" 
						marginwidth="0" 
						title="Contact"
						class="w-full"
					></iframe>
				</div>
			</div>
			
			<p class="text-center text-white/30 text-xs mt-8 flex flex-col items-center gap-2">
				<span>Secure & Confidential. We respect your privacy.</span>
				<span class="opacity-50">— or —</span>
				<a href="https://wa.me/919239044208" class="flex items-center gap-2 text-white hover:text-amber-200 transition-colors">
					<svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" class="opacity-80">
						<path d="M13.601 2.326A7.95 7.95 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.228.149-.43.049-.202-.1-.853-.314-1.624-1.002-.602-.536-1.01-1.2-1.129-1.402-.119-.202-.013-.312.087-.411.09-.089.197-.232.296-.349.099-.117.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
					</svg>
					WhatsApp us directly
				</a>
			</p>
		</div>
	</div>

	<script>
		var d=document,w="https://tally.so/widgets/embed.js",v=function(){"undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))};if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){var s=d.createElement("script");s.src=w,s.onload=v,s.onerror=v,d.body.appendChild(s);}
	</script>
</Layout>
