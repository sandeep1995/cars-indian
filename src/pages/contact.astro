---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';

const title = 'Concierge Service | IndianLuxuryCars.com';
const description = 'Tell us your requirements. We will personally connect you with verified pre-owned luxury car dealers.';
---

<Layout title={title} description={description}>
	<div class="min-h-[80vh] flex flex-col items-center justify-center px-4 py-20 relative overflow-hidden">
		<!-- Background Elements -->
		<div class="absolute inset-0 z-0">
			<div class="absolute inset-0 bg-gradient-to-b from-[#05060a] via-[#05060a]/95 to-[#05060a]"></div>
			<img src="/cars/porsche-panamera-motion.jpg" alt="" class="absolute inset-0 w-full h-full object-cover opacity-20 blur-sm" />
		</div>

		<div class="relative z-10 w-full max-w-2xl mx-auto">
			<div class="text-center mb-12">
				<span class="inline-block py-1 px-3 rounded-full bg-amber-900/20 border border-amber-500/20 text-amber-200 text-xs font-bold uppercase tracking-widest mb-6">
					Concierge Service
				</span>
				<h1 class="text-4xl md:text-5xl font-serif text-white mb-6">Chat with our Car Scout</h1>
				<p class="text-lg text-white/60 font-light leading-relaxed mb-8">
					Don't waste time searching. Tell us what you're looking for, and we'll curate the best options from our network of 500+ verified dealers.
				</p>

				<a href="https://wa.me/919239044208?text=Hi,%20I'm%20looking%20for%20a%20luxury%20car" class="inline-flex items-center gap-3 px-8 py-4 bg-[#25D366] text-white font-bold uppercase tracking-wider rounded-full hover:bg-[#20bd5a] transition-all transform hover:scale-105 shadow-lg shadow-green-900/20">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
					</svg>
					WhatsApp Us Directly
				</a>
			</div>

			<div class="relative">
				<div class="absolute inset-0 flex items-center" aria-hidden="true">
					<div class="w-full border-t border-white/10"></div>
				</div>
				<div class="relative flex justify-center">
					<span class="bg-[#05060a] px-4 text-sm text-white/30 uppercase tracking-widest">or fill a form</span>
				</div>
			</div>

			<ContactForm client:load />
			
			<p class="text-center text-white/30 text-xs mt-8">
				Secure & Confidential. We respect your privacy.
			</p>
		</div>
	</div>
</Layout>
